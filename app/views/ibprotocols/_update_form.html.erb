<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel">
      <div class="panel-body">
        <%= form_for([@antibody, @ibprotocol], html: { multipart: true }) do |f| %>
          <% if @ibprotocol.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@ibprotocol.errors.count, "error") %> prohibited this application from being saved:
              </h2>
              <ul>
              <% @ibprotocol.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "Cell/tissue type" %>
            <%= f.text_field :cell_tissue, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Lysis" %>
            <%= f.text_field :lysis, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Sonication" %>
            <%= f.text_field :sonication, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Sample size" %>
            <%= f.text_field :sample_size, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Sample loading" %>
            <%= f.text_field :sample_loading, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Gel" %>
            <%= f.text_field :gel, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Electrophoresis" %>
            <%= f.text_field :electrophoresis, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Membrane" %>
            <%= f.text_field :membrane, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Transfer" %>
            <%= f.text_field :transfer, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Blocking" %>
            <%= f.text_field :blocking, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Primary description" %>
            <%= f.text_field :primary_description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :first_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Secondary description" %>
            <%= f.text_field :secondary_description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :second_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Detection" %>
            <%= f.text_field :detection, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Helpful information for my protocol" %>
            <%= f.text_field :information, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :blot, "Upload blot image" %>
            <%= f.file_field :blot %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Protocol", class: "btn btn-primary" %>
          </div>
        <% end %> 
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div>