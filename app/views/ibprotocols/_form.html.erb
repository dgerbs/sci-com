<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="center">Immunoblot Application</h2>
      </div>
      <div class="panel-body">
        <%= form_for([@antibody, @ibprotocol], html: { multipart: true }) do |f| %>
          <% if @ibprotocol.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                <p><strong><%= pluralize(@ibprotocol.errors.count, "error") %></strong> prohibited this application from being saved. 
                </p>
                <p>
                  Please make sure all fields are filled.
                </p>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "Cell" %>
            <%= f.text_field :cell_tissue, class: "form-control", placeholder: "tissue type" %>
          </div>
          <div class="form-group">
            <%= f.label "Lysis" %>
            <%= f.text_field :lysis, class: "form-control", placeholder: "buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Sonication" %>
            <%= f.text_field :sonication, class: "form-control", placeholder: "(if applicable) number, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Sample size" %>
            <%= f.text_field :sample_size, class: "form-control", placeholder: "ug material/sample" %>
          </div>
          <div class="form-group">
            <%= f.label "Sample loading" %>
            <%= f.text_field :sample_loading, class: "form-control", placeholder: "buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Gel" %>
            <%= f.text_field :gel, class: "form-control", placeholder: "type, percentage" %>
          </div>
          <div class="form-group">
            <%= f.label "Electrophoresis" %>
            <%= f.text_field :electrophoresis, class: "form-control", placeholder: "buffer, conditions" %>
          </div>
          <div class="form-group">
            <%= f.label "Membrane" %>
            <%= f.text_field :membrane, class: "form-control", placeholder: "type" %>
          </div>
          <div class="form-group">
            <%= f.label "Transfer" %>
            <%= f.text_field :transfer, class: "form-control", placeholder: "buffer, conditions" %>
          </div>
          <div class="form-group">
            <%= f.label "Blocking" %>
            <%= f.text_field :blocking, class: "form-control", placeholder: "buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Primary description" %>
            <%= f.text_field :primary_description, class: "form-control", placeholder: "dilution, buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :first_wash, class: "form-control", placeholder: "number, buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Secondary description" %>
            <%= f.text_field :secondary_description, class: "form-control", placeholder: "dilution, buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :second_wash, class: "form-control", placeholder: "number, buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Detection" %>
            <%= f.text_field :detection, class: "form-control", placeholder: "reagent, method" %>
          </div>
          <div class="form-group">
            <%= f.label "Helpful information for my protocol" %>
            <%= f.text_field :information, class: "form-control", placeholder: "please provide any additional information here" %>
          </div>
          <div class="form-group">
            <%= f.label :blot, "Upload blot image" %>
            <%= f.file_field :blot %>
          </div>
          <div class="form-group">
            <%= f.submit "Publish", class: "btn btn-primary" %>
          </div>
        <% end %> 
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div>