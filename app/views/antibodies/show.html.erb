<div class="row">
  <div class="col-md-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3>
          <b>Antibody:</b>
          <%= @antibody.antibody %>
        </h3>
      </div>
      <div class="panel-body">
        <p>
          <b>Target:</b>
          <%= @antibody.target %>
        </p>
        <p>
          <b>Vendor:</b>
          <%= @antibody.vendor %>
        </p>
        <p>
          <b>Product:</b>
          <%= @antibody.product %>
        </p>
        <p>
          <b>Isotype:</b>
          <%= @antibody.isotype %>
        </p>
        <p>
          <%= pluralize @antibody.reputation_for(:votes).to_i, "rating" %> |
          <%= link_to "Up", vote_antibody_path(@antibody, type: "up"), class: "glyphicon glyphicon-thumbs-up", method: "post" %> | 
          <%= link_to "Down", vote_antibody_path(@antibody, type: "down"), class: "glyphicon glyphicon-thumbs-down", method: "post" %>
        </p>
        <p>
          <b>Protocols:</b>
          <%= @antibody.ihcprotocols.count + @antibody.ifprotocols.count + @antibody.ipreprotocols.count + @antibody.ibprotocols.count %>
        </p>
        <div class="btn-group">
          <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
            Add Protocol <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Immunohistochemistry", new_antibody_ihcprotocol_path(@antibody)   %></li>
            <li><%= link_to "Immunofluorescence",   new_antibody_ifprotocol_path(@antibody)    %></li>
            <li><%= link_to "Immunoprecipitation",  new_antibody_ipreprotocol_path(@antibody)  %></li>
            <li><%= link_to "Immunoblot",           new_antibody_ibprotocol_path(@antibody)    %></li>
          </ul>
        </div>
      </div>
      <div class="panel-footer">
      </div>
    </div>
    <div class="app_nav">
      <div class="panel">
        <div class="panel-body">
          <p>
            Immunohistochemistry: 
            <%= @antibody.ihcprotocols.count %>
            <span><%= link_to "Show", antibody_ihcprotocols_path(@antibody.ihcprotocols, @ihcprotocol), remote: true, class: 'btn btn-xs btn-primary' %></span>
          </p>
          <p>
            Immunofluorescence: 
            <%= @antibody.ifprotocols.count %>
            <span><%= link_to "Show", antibody_ifprotocols_path(@antibody.ifprotocols, @ifprotocol), remote: true, class: 'btn btn-xs btn-primary' %></span>
          </p>
          <p>
            Immunoprecipitation: 
            <%= @antibody.ipreprotocols.count %>
            <span><%= link_to "Show", antibody_ipreprotocols_path(@antibody.ipreprotocols, @ipreprotocol), remote: true, class: 'btn btn-xs btn-primary' %></span>
          </p>
          <p>
            Immunoblot: 
            <%= @antibody.ibprotocols.count %>
            <span><%= link_to "Show", antibody_ibprotocols_path(@antibody.ibprotocols, @ibprotocol), remote: true, class: 'btn btn-xs btn-primary' %></span>
          </p>
        </div>
      </div>
    </div>
  </div> 
  <div class="col-md-8">
    <div id="app_view">
    </div>
  </div>
</div>