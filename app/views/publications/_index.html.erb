<h1>
  <small>Publications</small>
</h1>
<p>
<% @publications.each do |pub| %>
  <div class="publication">
    <% unless current_user != pub.owner %>
      <%= image_tag pub.owner.image_url(:small_thumb).to_s %> <%= link_to pub.owner.name, pub.owner %>
      <%= render_activity pub %>
    <% else %>
      <%= image_tag pub.owner.image_url(:small_thumb).to_s %> <%= link_to pub.owner.name, pub.owner %>
    <%= render_activity pub %>
    <% end %>
  </div>
<% end %>
</p>  