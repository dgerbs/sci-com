<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="center">Immunofluorescence Application</h2>
      </div>
      <div class="panel-body">
        <%= form_for([@antibody, @ifprotocol], html: { multipart: true }) do |f| %>
          <% if @ifprotocol.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@ifprotocol.errors.count, "error") %> prohibited this application from being saved:
              </h2>
              <ul>
              <% @ifprotocol.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "Cell" %>
            <%= f.text_field :cell, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Fixation" %>
            <%= f.text_field :fixation, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :first_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Blocking" %>
            <%= f.text_field :blocking, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Primary description" %>
            <%= f.text_field :primary_description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :second_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Secondary description" %>
            <%= f.text_field :secondary_description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :third_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Coverslip" %>
            <%= f.text_field :coverslip, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Helpful information for my protocol" %>
            <%= f.text_field :information, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Protocol", class: "btn btn-primary" %>
          </div>
        <% end %> 
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div>