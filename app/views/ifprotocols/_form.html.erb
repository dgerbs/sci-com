<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="center">Immunofluorescence Application</h2>
      </div>
      <div class="panel-body">
        <%= form_for([@antibody, @ifprotocol], html: { multipart: true }) do |f| %>
          <% if @ifprotocol.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                <p><strong><%= pluralize(@ifprotocol.errors.count, "error") %></strong> prohibited this application from being saved.
                </p>
                <p>
                  Please make sure all fields are filled.
                </p>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "Cell" %>
            <%= f.text_field :cell, class: "form-control", placeholder: "cell type" %>
          </div>
          <div class="form-group">
            <%= f.label "Fixation" %>
            <%= f.text_field :fixation, class: "form-control", placeholder: "reagent, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :first_wash, class: "form-control", placeholder: "number, buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Blocking" %>
            <%= f.text_field :blocking, class: "form-control", placeholder: "buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Primary description" %>
            <%= f.text_field :primary_description, class: "form-control", placeholder: "dilution, buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :second_wash, class: "form-control", placeholder: "number, buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Secondary description" %>
            <%= f.text_field :secondary_description, class: "form-control", placeholder: "(if applicable) dilution, buffer, temperature, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :third_wash, class: "form-control", placeholder: "(if applicable) number, buffer, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Coverslip" %>
            <%= f.text_field :coverslip, class: "form-control", placeholder: "reagent/product, duration" %>
          </div>
          <div class="form-group">
            <%= f.label "Helpful information for my protocol" %>
            <%= f.text_field :information, class: "form-control", placeholder: "please provide any additional information here" %>
          </div>
          <div class="form-group">
            <%= f.label :blot, "Upload blot image" %>
            <%= f.file_field :blot %>
          </div>
          <div class="form-group">
            <%= f.submit "Publish", class: "btn btn-primary" %>
          </div>
        <% end %> 
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div>