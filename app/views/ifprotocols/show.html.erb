<div class="row">
  <div class="col-md-5">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3>
          <b>Immunofluorescence Protocol:</b>
        </h3>
      </div>
      <div class="panel-body">
        <p>
          <b>Cell:</b>
          <%= @ifprotocol.cell %>
        </p>
        <p>
          <b>Fixation:</b>
          <%= @ifprotocol.fixation %>
        </p>
        <p>
          <b>Washes:</b>
          <%= @ifprotocol.first_wash %>
        </p>
        <p>
          <b>Blocking:</b>
          <%= @ifprotocol.blocking %>
        </p>
        <p>
          <b>Primary description:</b>
          <%= @ifprotocol.primary_description %>
        </p>
        <p>
          <b>Washes:</b>
          <%= @ifprotocol.second_wash %>
        </p>
        <p>
          <b>Secondary description:</b>
          <%= @ifprotocol.secondary_description %>
        </p>
        <p>
          <b>Washes:</b>
          <%= @ifprotocol.third_wash %>
        </p>
        <p>
          <b>Coverslip:</b>
          <%= @ifprotocol.coverslip %>
        </p>
        <p>
          <b>Helpful information about my protocol:</b>
          <%= @ifprotocol.information %>
        </p>
        <p>
          <b>by:</b>
          <% if current_user == @ifprotocol.user %>
            You
          <% else %>
            <%= link_to @ifprotocol.user.name, @ifprotocol.user %>
          <% end %>
        </p>
        <p>
          <b>posted:</b>
          <%= time_ago_in_words(@ifprotocol.created_at) %> ago.
        </p>
        <p>
          <b>on:</b>
          <%= link_to @ifprotocol.antibody.antibody, @ifprotocol.antibody %>
        </p>
      </div>
    
      <br />
      <div class="panel-footer">
        <% if current_user == @ifprotocol.user %>
          <%= link_to 'Edit Protocol', edit_ifprotocol_path(@ifprotocol), class: "btn btn-primary" %>
          <%= link_to 'Destroy Protocol', @ifprotocol, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
      </div>     
    </div>
  </div>
  <div class="col-md-7">
    <style>
    div.col-md-7 {
      border: 1px solid black;
    }
    </style>
    <p>
      Images
    </p>
  </div>
</div>