<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="center">Immunohistochemistry Application</h2>
      </div>
      <div class="panel-body">
        <%= form_for([@antibody, @ihcprotocol], html: { multipart: true }) do |f| %>
          <% if @ihcprotocol.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                <p><strong><%= pluralize(@ihcprotocol.errors.count, "error") %></strong> prohibited this application from being saved.
                </p>
                <p>
                  Please make sure all fields are filled.
                </p>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "Tissue type" %>
            <%= f.text_field :tissue, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Fixation" %>
            <%= f.text_field :fixation, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :first_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Methanol/peroxidase" %>
            <%= f.text_field :methpero, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :second_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Blocking" %>
            <%= f.text_field :blocking, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Primary description" %>
            <%= f.text_field :primary_description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :third_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Signal enhancement" %>
            <%= f.text_field :signal, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Washes" %>
            <%= f.text_field :fourth_wash, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Dehydration procedure" %>
            <%= f.text_field :dehydration, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Mounting" %>
            <%= f.text_field :mounting, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Helpful information for my protocol" %>
            <%= f.text_field :information, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :blot, "Upload blot image" %>
            <%= f.file_field :blot %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Protocol", class: "btn btn-primary" %>
          </div>
        <% end %> 
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div>