<% provide(:title, @title) %>
<div class="row">
  <aside class="col-xs-12 col-md-6 col-md-offset-3">
    <section>
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'users/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag current_user.image_url(:small_thumb), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div>
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>