<% provide(:title, "Sign up") %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h1 class="center">Sign up</h1>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <% if resource.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                <%= devise_error_messages! %>
              </div>
            </div>
          <% end %>

          <div class="form-inline" role="form">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", :autofocus => true, placeholder: "First and last name" %>
            </div>

            <div class="form-group pull-right">
              <%= f.label :occupation %>
              <%= f.text_field :occupation, class: "form-control", placeholder: "Ph.D., student, awesome person" %>
            </div>
          </div>

          <br>

          <div class="form-group">
            <%= f.label "Research interests" %>
            <%= f.text_field :interests, autofocus: true, class: "form-control", placeholder: "Cancer stem cell transcriptional signaling networks" %>
          </div>
              
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "me@youremail.com" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <i>(make sure to write it down!)</i>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-lg btn-primary disabled" %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
